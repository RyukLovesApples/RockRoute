<%- include("../partials/header.ejs") %>

<form action="<%= postId ? '/posts/' + postId + '?_method=PUT': '/posts/new' %>" method="POST" id="postForm">
  <label for="title">Title</label>
  <input type="text" name="title" value="<%= locals.post ? post.title : '' %>" required>
  <label for="content">Content</label>
  <input type="text" name="content" value="<%= locals.post ? post.content : '' %>" required>
  <button type="submit"><%= postId ? "Update" : "Create" %> Post</button>
</form>

